{
  "name": "tooltag",
  "version": "1.0.0",
  "description": "A monorepo for the ToolTag application",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "pnpm --filter tooltag dev",
    "build": "pnpm --filter tooltag build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "type-check": "pnpm -r type-check",
    "db:migrate": "pnpm --filter tooltag db:migrate",
    "db:push": "pnpm --filter tooltag db:push",
    "db:seed": "pnpm --filter tooltag db:seed",
    "db:studio": "pnpm --filter tooltag db:studio"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.0"
  }
}