# ToolTag Environment Variables
# Copy this to .env and fill in your values

# Node Environment
NODE_ENV=development

# Database (Postgres)
# For local dev: postgresql://user:password@localhost:5432/tooltag
# For Neon/Supabase: get connection string from dashboard
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tooltag

# App URL (used for QR codes, magic links, etc.)
PUBLIC_APP_URL=http://localhost:5173

# Auth Secret (generate with: openssl rand -base64 32)
AUTH_SECRET=your-secure-random-string-at-least-32-chars

# Email (optional for MVP - leave blank to skip email features)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@tooltag.app

# Storage for photos (local for MVP)
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# Observability (optional - recommended for production)
# Sentry: Error tracking and performance monitoring
# Get your DSN from https://sentry.io/settings/projects/
PUBLIC_SENTRY_DSN=

# PostHog: Product analytics (optional)
# Get your key from https://app.posthog.com/project/settings
POSTHOG_KEY=
POSTHOG_HOST=https://app.posthog.com

# Stripe (optional - for billing features)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=
